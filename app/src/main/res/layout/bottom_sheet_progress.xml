<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:paddingBottom="24dp"
                                                   app:layout_behavior="@string/bottom_sheet_behavior"
                                                   android:layout_height="wrap_content">

    <ProgressBar android:layout_width="match_parent" android:layout_height="wrap_content"
                 android:indeterminate="true"
                 app:layout_constraintLeft_toLeftOf="parent"
                 app:layout_constraintTop_toTopOf="parent"
                 android:id="@+id/progressbar"
                 style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>

    <TextView android:layout_width="0dp" android:layout_height="wrap_content"
              app:layout_constraintRight_toLeftOf="@id/iv_close"
              android:text="Loading..."
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintTop_toBottomOf="@id/progressbar"
              android:id="@+id/tv_message"
              android:padding="8dp"
              android:textSize="16sp"/>

    <ImageView android:layout_width="42dp" android:layout_height="42dp"
               android:src="@drawable/ic_twotone_close_24px"
               app:layout_constraintTop_toBottomOf="@id/progressbar"
               android:id="@+id/iv_close"
               app:layout_constraintRight_toRightOf="parent"
               android:padding="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>