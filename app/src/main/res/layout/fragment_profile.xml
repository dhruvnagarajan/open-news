<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:application="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/ghostwhite">

    <ImageView
            android:id="@+id/iv_profile"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_margin="12dp"
            android:src="@drawable/ic_twotone_blur_on_24px"
            application:layout_constraintLeft_toLeftOf="parent"
            application:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:hint="Name"
            android:padding="8dp"
            android:textSize="14sp"
            android:textStyle="bold"
            application:layout_constraintBottom_toBottomOf="@id/iv_profile"
            application:layout_constraintLeft_toRightOf="@id/iv_profile"
            application:layout_constraintRight_toRightOf="parent"
            application:layout_constraintTop_toTopOf="@id/iv_profile" />

    <View
            android:id="@+id/gl1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="@color/grey"
            application:layout_constraintLeft_toLeftOf="parent"
            application:layout_constraintTop_toBottomOf="@id/iv_profile" />

    <TextView
            android:id="@+id/tv_registered_news"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Registered News"
            android:textSize="14sp"
            android:textStyle="bold"
            application:layout_constraintLeft_toLeftOf="parent"
            application:layout_constraintTop_toBottomOf="@id/gl1" />

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_registered_news"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:clipToPadding="false"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            application:layout_constraintBottom_toTopOf="@id/b_create_profile"
            application:layout_constraintTop_toBottomOf="@id/tv_registered_news" />

    <com.google.android.material.button.MaterialButton
            android:id="@+id/b_create_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Add News Profile"
            application:layout_constraintBottom_toBottomOf="parent"
            application:layout_constraintLeft_toLeftOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>