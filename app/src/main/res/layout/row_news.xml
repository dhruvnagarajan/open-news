<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:application="http://schemas.android.com/apk/res-auto"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        application:cardCornerRadius="3dp"
        application:cardElevation="3dp">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/iv_feature_image"
                android:layout_width="102dp"
                android:layout_height="0dp"
                application:layout_constraintBottom_toBottomOf="parent"
                application:layout_constraintLeft_toLeftOf="parent"
                application:layout_constraintTop_toTopOf="parent" />

        <TextView
                android:id="@+id/tv_source"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Source"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textSize="12sp"
                application:layout_constraintLeft_toLeftOf="@id/tv_headline"
                application:layout_constraintRight_toLeftOf="@id/tv_time"
                application:layout_constraintTop_toTopOf="parent" />

        <TextView
                android:id="@+id/tv_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="Time"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textSize="12sp"
                application:layout_constraintLeft_toRightOf="@id/tv_source"
                application:layout_constraintRight_toLeftOf="@id/tv_author"
                application:layout_constraintTop_toTopOf="parent" />

        <TextView
                android:id="@+id/tv_author"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:hint="Author"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textSize="12sp"
                application:layout_constraintLeft_toRightOf="@id/tv_time"
                application:layout_constraintRight_toRightOf="parent"
                application:layout_constraintTop_toTopOf="parent" />

        <TextView
                android:id="@+id/tv_headline"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:hint="Headline"
                android:maxLines="2"
                android:paddingLeft="8dp"
                android:paddingTop="8dp"
                android:paddingRight="8dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                application:layout_constraintLeft_toRightOf="@id/iv_feature_image"
                application:layout_constraintRight_toRightOf="parent"
                application:layout_constraintTop_toBottomOf="@id/tv_source" />

        <TextView
                android:id="@+id/tv_gist"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:hint="Gist"
                android:maxLines="3"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textSize="12sp"
                application:layout_constraintLeft_toLeftOf="@id/tv_headline"
                application:layout_constraintRight_toRightOf="@id/tv_headline"
                application:layout_constraintTop_toBottomOf="@id/tv_headline" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>